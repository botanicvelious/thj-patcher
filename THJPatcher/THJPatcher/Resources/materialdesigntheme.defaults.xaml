<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:po="http://schemas.microsoft.com/winfx/2006/xaml/presentation/options"
                    xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
                    xmlns:materialDesign="http://materialdesigninxaml.net/winfx/xaml/themes">

    <!-- This is a minimal version of the MaterialDesignTheme.Defaults.xaml file -->
    <!-- It contains just enough to prevent the application from crashing -->
    
    <SolidColorBrush x:Key="MaterialDesignBody" Color="#DD000000" po:Freeze="True" />
    <SolidColorBrush x:Key="MaterialDesignPaper" Color="#FFFAFAFA" po:Freeze="True" />
    <SolidColorBrush x:Key="PrimaryHueMidBrush" Color="#FF2196F3" po:Freeze="True" />
    <SolidColorBrush x:Key="PrimaryHueDarkBrush" Color="#FF1976D2" po:Freeze="True" />
    <SolidColorBrush x:Key="PrimaryHueLightBrush" Color="#FFBBDEFB" po:Freeze="True" />
    <SolidColorBrush x:Key="SecondaryHueMidBrush" Color="#FFFF4081" po:Freeze="True" />
    <SolidColorBrush x:Key="SecondaryHueDarkBrush" Color="#FFC51162" po:Freeze="True" />
    <SolidColorBrush x:Key="SecondaryHueLightBrush" Color="#FFF8BBD0" po:Freeze="True" />
    
    <Style x:Key="MaterialDesignRaisedButton" TargetType="Button">
        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="16,4" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    
    <Style x:Key="MaterialDesignFlatButton" TargetType="Button">
        <Setter Property="Background" Value="Transparent" />
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}" />
        <Setter Property="Padding" Value="8,4" />
        <Setter Property="FontWeight" Value="Medium" />
        <Setter Property="BorderThickness" Value="0" />
    </Style>
    
    <Style x:Key="MaterialDesignToolTip" TargetType="ToolTip">
        <Setter Property="Background" Value="{DynamicResource PrimaryHueMidBrush}" />
        <Setter Property="Foreground" Value="White" />
        <Setter Property="Padding" Value="8,4" />
    </Style>
    
    <Style x:Key="MaterialDesignCheckBox" TargetType="CheckBox">
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
    </Style>
    
    <Style x:Key="MaterialDesignTextBox" TargetType="TextBox">
        <Setter Property="Foreground" Value="{DynamicResource MaterialDesignBody}" />
        <Setter Property="BorderBrush" Value="{DynamicResource PrimaryHueMidBrush}" />
    </Style>
    
    <Style x:Key="MaterialDesignLinearProgressBar" TargetType="ProgressBar">
        <Setter Property="Foreground" Value="{DynamicResource PrimaryHueMidBrush}" />
        <Setter Property="Background" Value="#E0E0E0" />
        <Setter Property="Height" Value="4" />
    </Style>
    
</ResourceDictionary>
